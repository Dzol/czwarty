3 CONSTANT SIZE

: SQUARE
  DUP * ;

VARIABLE WEIGHT SIZE SQUARE CELLS ALLOT

: GET-INDEX-NUMBER ( x y -- index# )
  SIZE * + ;

: GET-INDEX-ADDRESS  ( index - index@ )
  CELLS WEIGHT  + ;

: ZERO?
  0 = ;

: .WEIGHT
  SIZE SQUARE 0 DO
    I 3 MOD ZERO? IF CR THEN
    I GET-INDEX-ADDRESS @ .
  LOOP ;

: INITIALIZE
  SIZE SQUARE 0 DO
    0 I GET-INDEX-ADDRESS !
  LOOP ;

INITIALIZE .WEIGHT BYE
